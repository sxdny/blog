---
import { SITE_TITLE } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <title>{SITE_TITLE}</title>
    <meta charset="utf-8" />
  </head>
	<style>
		@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Yarndings+12&display=swap');
		body {
			font-family: 'Jetbrains Mono', sans-serif;
			margin: 0;
			padding: 0;
			background-color: rgb(15, 15, 15);
			color: rgb(90, 90, 90);
			height: 100vh;
		}
		main {
			height: 100%;
			text-align: center;
			align-content: center;
		}
		h1 {
			font-size: auto;
			padding: 0;
			margin: 0;
			font-weight: normal;
			animation: color 2s infinite;
		}
		p {
			font-size: 0.75em;
			color: rgb(37, 37, 37);
		}
		a {
			color: rgb(37, 37, 37);
			text-decoration: none;
		}
		span {
			color: rgb(90, 90, 90);
			
		}

		@keyframes color {
			0% {
				color: rgb(90, 90, 90);
			}
			50% {
				color: rgb(99, 255, 9);
			}
			100% {
				color: rgb(90, 90, 90);
			}
		}
	</style>
	<script>
		const sentences = [
			"paciencia, aún lo estoy haciendo",
			"no te preocupes, aún lo estoy haciendo",
			"calma, que ya casi estoy",
			"ahora ahora, que lo termino",
			"tranquilo, que ya casi",
			"hoy a las 21:30",
			"Windows está configurando las actualizaciones",
			"Estamos trabajando en ello",
		]

		const randomSentence = document.getElementById('randomSentence');

		setInterval(() => {
			const randomIndex = Math.floor(Math.random() * sentences.length);
			if (randomSentence) {
				randomSentence.innerText = sentences[randomIndex];
			}
		}, 7000);
	</script>
  <body>
    <main>
      <h1 id="randomSentence"> paciencia, aún lo estoy haciendo </h1>
			<p>by <a href="https://github.com/sxdny"><span>sxdny</span></a></p>
    </main>
  </body>
</html>
